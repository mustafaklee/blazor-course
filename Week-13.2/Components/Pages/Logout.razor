@page "/Logout"
@using Microsoft.AspNetCore.Components.Authorization
@using Week13_new_self_auth.Services
@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    Merhaba, @context.User.Identity.Name
                    <button class="btn btn-link" @onclick="CikisYap">Çıkış Yap</button>
                </Authorized>
                <NotAuthorized>
                    <a href="/login">Giriş Yap</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task CikisYap()
    {
        var customAuthStateProvider = (CustomAuthenticationStateProvider)AuthStateProvider;
        
        // Session'ı temizle ve state'i güncelle
        await customAuthStateProvider.UpdateAuthenticationState(null);
        
        NavManager.NavigateTo("/Logout", true);
    }
}